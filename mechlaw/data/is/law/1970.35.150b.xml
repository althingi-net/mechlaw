  <chapter nr="2" nr-type="roman" roman-nr="II">
    <nr-title>II. kafli.</nr-title>
    <name>Um kristnisjóð.</name>
    <art nr="18">
      <nr-title>18. gr.</nr-title>
      <subart nr="1">
        <sen>Stofna skal sjóð, er nefnist kristnisjóður.</sen>
      </subart>
    </art>
    <art nr="19">
      <nr-title>19. gr.</nr-title>
      <subart nr="1">
        <sen>Stofnfé sjóðsins er:</sen>
        <numart nr="a" type="alphabet">
          <nr-title>a.</nr-title>
          <sen>Kirkjujarðasjóður.</sen>
          <sen>Skal sá sjóður lagður niður og renna í kristnisjóð.</sen>
        </numart>
        <numart nr="b" type="alphabet">
          <nr-title>b.</nr-title>
        </numart>
        <numart nr="c" type="alphabet">
          <nr-title>c.</nr-title>
          <sen>Prestakallasjóður.</sen>
          <sen>Skal sá sjóður lagður niður og renna í kristnisjóð.</sen>
        </numart>
      </subart>
      <footnotes>
        <footnote href="https://www.althingi.is/altext/stjt/1997.078.html#G64" law-art="64" law-nr="78" law-year="1997" nr="1">
          <footnote-sen>L. 78/1997, 64. gr.</footnote-sen>

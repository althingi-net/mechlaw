    <art nr="32">
      <nr-title>32. gr.</nr-title>
      <subart nr="1">
        <sen>Ákveða skal með reglugerð um nánari framkvæmd laga þessara.</sen>
      </subart>
    </art>
    <art nr="33">
      <nr-title>33. gr.</nr-title>

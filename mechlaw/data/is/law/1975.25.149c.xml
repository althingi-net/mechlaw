    <art nr="29">
      <nr-title>29. gr.</nr-title>
      <subart nr="1">
        <sen/>
      </subart>
      <subart nr="2">
        <sen>Kostnaður vegna ráðgjafar og fræðslu á þessu sviði greiðist af almannafé.</sen>
      </subart>
